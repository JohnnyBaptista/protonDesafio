<div class="container-fluid uploadBox">
    <div class="forms">
        <form method="POST" action="/musics" enctype="multipart/form-data">
            <div class="form-group">
                <label for="formFile">Abra o arquivo MP3</label>
                <input type="file" class="form-control-file" id="formFile" name="file" accept="audio/*">
            </div>
            <div class="form-group">
                <label for="formAuthor">Nome do Autor</label>
                <input type="text" class="form-control" id="formAuthor" name="author">
            </div>
            <button type="submit" class="btn btn-primary btn-forms">Submit</button>
            <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>
